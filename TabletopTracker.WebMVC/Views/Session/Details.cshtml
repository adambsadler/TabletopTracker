@model TabletopTracker.Models.Session.SessionDetail

@{
    ViewBag.Title = "Session Details";
}

<div class="cover">
    <h1 class="cover-header">@ViewBag.Title</h1>
    <p class="subheader">View the details of your game session.</p>
    <p>@Html.ActionLink("Back to Your Sessions", "Index", null, new { @class = "btn btn-primary" })</p>
</div>

<div class="col-md-6 mb-3 mx-auto">
    <div class="card text-center shadow-sm">
        <div class="card-header">
            <b>Session ID:</b> @Html.DisplayFor(model => model.SessionId)
        </div>
        <div class="card-body">
            <h3 class="card-title mb-3">
                @Html.DisplayFor(model => model.Game)
            </h3>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Date):</b> @Html.DisplayFor(model => model.Date)</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Players):</b> @Html.DisplayFor(model => model.Players)</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Notes):</b> @Html.DisplayFor(model => model.Notes)</p>
            <div class="row justify-content-center">
                <p>@Html.ActionLink("Edit Session", "Edit", new { id = Model.SessionId }, new { @class = "btn btn-warning " })</p>
            </div>
        </div>
    </div>
</div>

<style>
    .cover {
        padding: 25px 0;
        text-align: center;
        margin: auto;
    }

    .cover-header {
        font-size: 48px;
        font-family: 'Frutiger LT Std';
    }

    .subheader {
        font-size: 16px;
        font-family: 'Frutiger LT Std';
        font-weight: bold;
    }
</style>