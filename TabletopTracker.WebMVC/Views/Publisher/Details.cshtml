@model TabletopTracker.Models.Publisher.PublisherDetail

@{
    ViewBag.Title = "Publisher Details";
}

<div class="cover">
    <h1 class="cover-header">@ViewBag.Title</h1>
    <p class="subheader">View the details of a publisher in your collection.</p>
    <p>@Html.ActionLink("Back to Your Publishers", "Index", null, new { @class = "btn btn-primary" })</p>
</div>

<div class="col-md-6 mb-3 mx-auto">
    <div class="card text-center shadow-sm">
        <div class="card-header">
            <b>Publisher ID:</b> @Html.DisplayFor(model => model.PublisherId)
        </div>
        <div class="card-body">
            <h3 class="card-title mb-3">
                @Html.DisplayFor(model => model.Name)
            </h3>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Website):</b> <a href="@Html.DisplayFor(model => model.Website)" target="_blank">@Html.DisplayFor(model => model.Website)</a></p>
            <div class="row justify-content-center">
                <p>@Html.ActionLink("Edit Publisher", "Edit", new { id = Model.PublisherId }, new { @class = "btn btn-warning " })</p>
            </div>
        </div>
    </div>
</div>

<style>
    .cover {
        padding: 25px 0;
        text-align: center;
        margin: auto;
    }

    .cover-header {
        font-size: 48px;
        font-weight: bold;
    }

    .subheader {
        font-size: 18px;
        font-weight: bold;
    }
</style>