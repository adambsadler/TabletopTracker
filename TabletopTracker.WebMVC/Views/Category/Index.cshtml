@model IEnumerable<TabletopTracker.Models.Category.CategoryListItem>

@{
    ViewBag.Title = "Categories";
}

<div class="cover">
    <h1 class="cover-header">@ViewBag.Title</h1>
    <p class="subheader">Organize your games by category.</p>
    <p>@Html.ActionLink("Add a Category", "Create", null, new { @class = "btn btn-success " })</p>
</div>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="row row-cols-1 row-cols-md-3">
    @foreach (var item in Model)
    {
        <div class="col-md mb-3">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-3">
                        @Html.DisplayFor(modelItem => item.Name)
                    </h3>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text mt-3"><b>Games in collection:</b> @Html.DisplayFor(modelItem => item.GameCount)</p>
                    <div class="row justify-content-center">
                        <p class="col">@Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-warning " })</p>
                        <p class="col-md-auto">@Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = "btn btn-primary " })</p>
                        <p class="col">@Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-danger " })</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .cover {
        padding: 25px 0;
        text-align: center;
        margin: auto;
    }

    .cover-header {
        font-size: 48px;
        font-weight: bold;
    }

    .subheader {
        font-size: 18px;
        font-weight: bold;
    }
</style>