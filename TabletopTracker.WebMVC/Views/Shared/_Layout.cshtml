                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Publisher")">Publishers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Session")">Sessions</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

