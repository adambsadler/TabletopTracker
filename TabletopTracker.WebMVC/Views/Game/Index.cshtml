@model IEnumerable<TabletopTracker.Models.Game.GameListItem>

@{
    ViewBag.Title = "Games";
}

<div class="cover">
    <h1 class="cover-header">@ViewBag.Title</h1>
    <p class="subheader">Manage your collection of games.</p>
    <br />
    <p>@Html.ActionLink("Add a Game", "Create", null, new { @class = "btn btn-success "})</p>
</div>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublisherName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.MinPlayers)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.MaxPlayers)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.HavePlayed)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.MinPlayers)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.MaxPlayers)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.HavePlayed)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.GameId }, new { @class = "btn btn-warning " })
                @Html.ActionLink("Details", "Details", new { id=item.GameId }, new { @class = "btn btn-primary " })
                @Html.ActionLink("Delete", "Delete", new { id=item.GameId }, new { @class = "btn btn-danger "})
            </td>
        </tr>
    }

</table>

<style>
    .cover {
        padding: 25px 0;
        text-align: center;
        margin: auto;
    }

    .cover-header {
        font-size: 48px;
        font-family: 'Frutiger LT Std';
    }

    .subheader {
        font-size: 16px;
        font-family: 'Frutiger LT Std';
        font-weight: bold;
    }
</style>